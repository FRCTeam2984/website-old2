{{#extend "main"}}
  {{#content "style"}}
    <link rel="stylesheet" href="/css/text.css">
    <link rel="stylesheet" href="/css/post.css">
    <link rel="stylesheet" href="/css/blogglobal.css">
  {{/content}}
  {{#content "body"}}
    <article>
      <header>
        <h1>{{title}}</h1>
        <h2>
          By {{author}} on <time datetime="{{iso3339 date}}" title="{{datetime date}}">{{calendar date}}</time>
        </h2>
      </header>
      <div class="main">
        {{{contents}}}
      </div>
    </article>
  {{/content}}
{{/extend}}
